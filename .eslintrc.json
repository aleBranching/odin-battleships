{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier"],
  "ignorePatterns": ["main.js"],

  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-underscore-dangle": "off",
    "no-unused-vars": "warn",
    "no-plusplus": "off",
    "no-continue": "off",
    "no-use-before-define": "warn"
  },
  "plugins": ["jest"]
}
